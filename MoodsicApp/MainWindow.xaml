<Window x:Class="MoodsicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoodsicApp"
        mc:Ignorable="d"
        Title="Moodsic" Height="350" Width="525">
    <Grid>
        <TabControl Name="tabs">
            <TabItem Name="tabCamera" Header="Camera">
                <StackPanel>
                    <Label Content="Select an image" Height="100" Width="100"/>
                    <WrapPanel>
                        <TextBox Name="pathBox" />
                        <Button Name="pathButton" Click="pathButton_Click">...</Button>
                    </WrapPanel>
                    <ComboBox Name="videoDevicesComboBox" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Result"></TabItem>
            <TabItem Header="Console">
                <TextBox Name="console" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
