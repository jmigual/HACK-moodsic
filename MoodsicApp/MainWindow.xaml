                    <CheckBox Grid.Column="3" Name="useWebcam" VerticalAlignment="Center">Use webcam</CheckBox>
                </Grid>
                <Grid DockPanel.Dock="Bottom" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Label Content="Video Device" />
                    <ComboBox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="VideoDevicesComboBox" Margin="10,0"/>
